<h1><img src="flag-ghana.png" width=50px style="padding-right:10px;">Gh FabLab Database</h1>

<hr />
<h4><b>numbers of entry: <%= @numbers %> </b></h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= link_to "Name ▼", sort: "name" %></th>
      <th><%= link_to "Quantity ▼", sort: "quantity" %></th>
      <th><%= link_to "Location ▼", sort: "location" %></th>
      <th>Note</th>
      <th>Photo</th>
      <th><%= link_to "Date ▼", sort: "created_at" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.location %></td>
        <td><%= product.note %></td>
        <td><%= image_tag(product.photo,:size=>"100x100") %></td>
        <td><%= product.created_at %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

